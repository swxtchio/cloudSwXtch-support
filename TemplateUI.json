{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "cloudSwXtch instantiation template",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "planSection",
                            "type": "Microsoft.Common.Section",
                            "label": "cloudSwXtch commercial plan",
                            "elements": [
                                {
                                    "name": "PlanInfoText",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "cloudSwXtch plans are billed at hourly rates in addition to any Azure infrastructure (VM) fees.",
                                        "link": {
                                            "label": "Plan details and pricing information can be found here:",
                                            "uri": "https://www.swxtch.io/pricing"
                                        }
                                    }
                                },
                                {
                                    "name": "plan",
                                    "type": "Microsoft.Common.DropDown",
                                    "label": "Choose a cloudSwXtch plan:",
                                    "placeholder": "",
                                    "defaultValue": "Small",
                                    "toolTip": "",
                                    "multiselect": false,
                                    "selectAll": false,
                                    "filter": false,
                                    "filterPlaceholder": "Filter items ...",
                                    "multiLine": true,
                                    "defaultDescription": "A value for selection",
                                    "constraints": {
                                        "allowedValues": [
                                            {
                                                "label": "Small",
                                                "description": "up to 10 endpoints and 2Gbps egress",
                                                "value": "small"
                                            },
                                            {
                                                "label": "Medium",
                                                "description": "up to 50 endpoints and 30Gbps egress",
                                                "value": "medium"
                                            },
                                            {
                                                "label": "Large",
                                                "description": "up to 200 endpoints and 96Gbps egress",
                                                "value": "large"
                                            }
                                        ],
                                        "required": true
                                    },
                                    "visible": true
                                }
                            ],
                            "visible": true
                        },
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": [
                                    "microsoft.resources/resourcegroups"
                                ]
                            }
                        },
                        {
                            "name": "switchName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Switch Name",
                            "toolTip": "The name of the switch instance.",
                            "defaultValue": "swxtch001",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-zA-Z][a-z0-9A-Z-]{3,24}$",
                                "validationMessage": "The switch name must be between 3 and 24 characters long and contain letters, numbers and hyphens only."
                            }
                        },
                        {
                            "name": "swxtchSize",
                            "type": "Microsoft.Compute.SizeSelector",
                            "label": "Swxtch Size",
                            "toolTip": "Size of the switch VM instance",
                            "recommendedSizes": [
                                "Standard_D4s_v4",
                                "Standard_D8s_v4",
                                "Standard_D16s_v4",
                                "Standard_D32s_v4",
                                "Standard_D48s_v4",
                                "Standard_D64s_v4"
                            ],
                            "constraints": {
                                "allowedSizes": [
                                    "Standard_D4_v3",
                                    "Standard_D8_v3",
                                    "Standard_D16_v3",
                                    "Standard_D32_v3",
                                    "Standard_D48_v3",
                                    "Standard_D64_v3",
                                    "Standard_D4_v4",
                                    "Standard_D8_v4",
                                    "Standard_D16_v4",
                                    "Standard_D32_v4",
                                    "Standard_D48_v4",
                                    "Standard_D64_v4",
                                    "Standard_D4s_v3",
                                    "Standard_D8s_v3",
                                    "Standard_D16s_v3",
                                    "Standard_D32s_v3",
                                    "Standard_D48s_v3",
                                    "Standard_D64s_v3",
                                    "Standard_D4s_v4",
                                    "Standard_D8s_v4",
                                    "Standard_D16s_v4",
                                    "Standard_D32s_v4",
                                    "Standard_D48s_v4",
                                    "Standard_D64s_v4",
                                    "Standard_D4as_v4",
                                    "Standard_D8as_v4",
                                    "Standard_D16as_v4",
                                    "Standard_D32as_v4",
                                    "Standard_D48as_v4",
                                    "Standard_D64as_v4",
                                    "Standard_D4s_v5",
                                    "Standard_D8s_v5",
                                    "Standard_D16s_v5",
                                    "Standard_D32s_v5",
                                    "Standard_D48s_v5",
                                    "Standard_D64s_v5",
                                    "Standard_D4as_v5",
                                    "Standard_D8as_v5",
                                    "Standard_D16as_v5",
                                    "Standard_D32as_v5",
                                    "Standard_D48as_v5",
                                    "Standard_D64as_v5",
                                    "Standard_E104i_v5"
                                ]
                            },
                            "osPlatform": "Linux",
                            "imageReference": {
                                "publisher": "swxtchiollc1614108926893",
                                "offer": "cloudswxtch-vm-001-preview",
                                "sku": "swxtch-iex-001"
                            },
                            "visible": true,
                            "scope": {
                                "subscriptionId": "[steps('basics').resourceScope.subscription.subscriptionId]",
                                "location": "[steps('basics').resourceScope.location.name]"
                            }
                        },
                        {
                            "name": "adminName",
                            "type": "Microsoft.Compute.UserNameTextBox",
                            "label": "Admin name",
                            "defaultValue": "swxtchadmin",
                            "toolTip": "User name for the admin account on the cloudSwXtch VM",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-z0-9A-Z]{1,30}$",
                                "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                            },
                            "osPlatform": "Linux",
                            "visible": true
                        },
                        {
                            "name": "credentials",
                            "type": "Microsoft.Compute.CredentialsCombo",
                            "label": {
                                "authenticationType": "Authentication type",
                                "password": "Password",
                                "confirmPassword": "Confirm password",
                                "sshPublicKey": "SSH public key"
                            },
                            "toolTip": {
                                "authenticationType": "SSH",
                                "password": "not supported",
                                "sshPublicKey": "Make sure this is the PUBLIC part of the key"
                            },
                            "constraints": {
                                "required": true,
                                "customPasswordRegex": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{12,}$",
                                "customValidationMessage": "The password must be alphanumeric, contain at least 12 characters, and have at least 1 letter and 1 number."
                            },
                            "options": {
                                "hideConfirmation": false,
                                "hidePassword": true
                            },
                            "osPlatform": "Linux",
                            "visible": true
                        },
                        {
                            "name": "textBlock2",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "text": "Select the 'Latest release' to get the most current, up-to-date version of switch software. Select 'Specific version' if you need to create a switch with a special software version."
                            }
                        },
                        {
                            "name": "versionDropDown",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Software Version",
                            "defaultValue": "Latest release",
                            "toolTip": "Select the version of software to install",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Latest release",
                                        "value": "latest"
                                    },
                                    {
                                        "label": "Specific version",
                                        "value": "manual"
                                    }
                                ],
                                "required": true
                            },
                            "visible": true
                        },
                        {
                            "name": "textBlock3",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": "[equals(steps('basics').versionDropDown, 'manual')]",
                            "options": {
                                "text": "Please contact swXtch.io for valid version names then enter the exact version by name. An incorrect name will result in a failure to deploy event. Version names are generally of the form 'v0.0.0'"
                            }
                        },
                        {
                            "name": "VersionTextBox",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Manual entry of software version",
                            "defaultValue": "1.0.0",
                            "toolTip": "Entry exact version by name. Version names are of the form '1.0.0'",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-z0-9A-Z.]{4,30}$",
                                "validationMessage": "Only alphanumeric characters are allowed, and the value must be 4-30 characters long."
                            },
                            "visible": "[equals(steps('basics').versionDropDown, 'manual')]"
                        },
                        {
                            "name": "TagsSection",
                            "type": "Microsoft.Common.Section",
                            "label": "Optional Resource Tags",
                            "elements": [
                                {
                                    "name": "Tags",
                                    "type": "Microsoft.Common.TagsByResource",
                                    "label": "Optional tags",
                                    "resources": [
                                        "Microsoft.Network/networkInterfaces",
                                        "Microsoft.Compute/virtualMachines"
                                    ]
                                }
                            ],
                            "visible": true
                        }
                    ]
                },
                {
                    "name": "network",
                    "label": "Network",
                    "elements": [
                        {
                            "name": "VnetInfoBox",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": "[equals(steps('network').virtualnetwork.newOrExisting, 'new')]",
                            "options": {
                                "icon": "Error",
                                "text": "Please select an EXISTING virtual network. Creating a new virtual network is not supported."
                            }
                        },
                        {
                            "name": "virtualnetwork",
                            "type": "Microsoft.Network.VirtualNetworkCombo",
                            "label": {
                                "virtualNetwork": "Virtual network",
                                "subnets": "Subnets"
                            },
                            "toolTip": {
                                "virtualNetwork": "Only EXISTING virtual networks in the currently selected subscription and location are allowed.",
                                "subnets": "cloudSwXtch traffic is split between control and data planes. These subnets can be shared with other applications."
                            },
                            "defaultValue": {
                                "name": "pick-an-existing-vnet"
                            },
                            "constraints": {
                                "minAddressPrefixSize": "/28"
                            },
                            "options": {
                                "hideExisting": false
                            },
                            "subnets": {
                                "ctrlSubnet": {
                                    "label": "Control Subnet Name",
                                    "defaultValue": {
                                        "name": "ControlSubnet"
                                    },
                                    "constraints": {
                                        "minAddressPrefixSize": "/29",
                                        "minAddressCount": 1,
                                        "requireContiguousAddresses": false
                                    }
                                },
                                "dataSubnet": {
                                    "label": "Data Subnet Name",
                                    "defaultValue": {
                                        "name": "DataSubnet"
                                    },
                                    "constraints": {
                                        "minAddressPrefixSize": "/29",
                                        "minAddressCount": 1,
                                        "requireContiguousAddresses": false
                                    }
                                }
                            },
                            "visible": true
                        },
                        {
                            "name": "AdvancedSection",
                            "type": "Microsoft.Common.Section",
                            "label": "Advanced Networking (optional)",
                            "elements": [
                                {
                                    "name": "staticEnable",
                                    "type": "Microsoft.Common.CheckBox",
                                    "label": "IP addresses are dynamic by default. Check this box to specify static IP address for network interfaces",
                                    "toolTip": "[Optional] Enables specifying static IP addresses"
                                },
                                {
                                    "name": "staticInfoBox",
                                    "type": "Microsoft.Common.InfoBox",
                                    "visible": "[steps('network').AdvancedSection.staticEnable]",
                                    "options": {
                                        "icon": "Warning",
                                        "text": "Static IPs are not validated here. An invalid static IP address will cause the deployment to fail."
                                    }
                                },
                                {
                                    "name": "ctrlIpTextBox",
                                    "type": "Microsoft.Common.TextBox",
                                    "label": "[concat('Enter static IP for network interface on ', steps('network').virtualnetwork.subnets.ctrlSubnet.name)]",
                                    "defaultValue": "",
                                    "toolTip": "WARNING: an invalid IP address will cause the deployment to fail",
                                    "constraints": {
                                        "required": true,
                                        "regex": "^([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])",
                                        "validationMessage": "Enter a valid static IP address."
                                    },
                                    "visible": "[steps('network').AdvancedSection.staticEnable]"
                                },
                                {
                                    "name": "dataIpTextBox",
                                    "type": "Microsoft.Common.TextBox",
                                    "label": "[concat('Enter static IP for network interface on ', steps('network').virtualnetwork.subnets.dataSubnet.name)]",
                                    "defaultValue": "",
                                    "toolTip": "WARNING: an invalid IP address will cause the deployment to fail",
                                    "constraints": {
                                        "required": true,
                                        "regex": "^([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])",
                                        "validationMessage": "Enter a valid static IP address."
                                    },
                                    "visible": "[steps('network').AdvancedSection.staticEnable]"
                                },
                                {
                                    "name": "ppgEnable",
                                    "type": "Microsoft.Common.CheckBox",
                                    "label": "Specify a Proximity Placement Group",
                                    "toolTip": "[Optional] Advanced option to specify a Proximity Placement Group"
                                },
                                {
                                    "name": "ppgWarning",
                                    "type": "Microsoft.Common.InfoBox",
                                    "visible": "[steps('network').AdvancedSection.ppgEnable]",
                                    "options": {
                                        "icon": "Warning",
                                        "text": "Enter the complete 'Proximity Placement Group' resource ID. An invalid resource ID will cause the deployment to fail."
                                    }
                                },
                                {
                                    "name": "ppgTextBox",
                                    "type": "Microsoft.Common.TextBox",
                                    "label": "Proximity Placement Group Resource ID",
                                    "defaultValue": "",
                                    "toolTip": "WARNING: an invalid 'Proximity Placement Group' Resource ID will cause the deployment to fail",
                                    "constraints": {
                                        "required": true,
                                        "regex": "^[a-z0-9A-Z._/-]{60,250}$",
                                        "validationMessage": "Enter full resource id. Must not be empty."
                                    },
                                    "visible": "[steps('network').AdvancedSection.ppgEnable]"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "location": "[steps('basics').resourceScope.location.name]",
                "virtualNetworkName": "[steps('network').virtualnetwork.name]",
                "virtualNetworkRGName": "[steps('network').virtualnetwork.resourceGroup]",
                "vnetNewOrExisting": "[steps('network').virtualnetwork.newOrExisting]",
                "subnetCtrlName": "[steps('network').virtualnetwork.subnets.ctrlSubnet.name]",
                "subnetDataName": "[steps('network').virtualnetwork.subnets.dataSubnet.name]",
                "useStaticIPs": "[ if(steps('network').AdvancedSection.staticEnable, 'true', 'false') ]",
                "staticCtrlIP": "[steps('network').AdvancedSection.ctrlIpTextBox]",
                "staticDataIP": "[steps('network').AdvancedSection.dataIpTextBox]",
                "swxtchName": "[steps('basics').switchName]",
                "version": "[if(equals(steps('basics').versionDropDown, 'manual'), steps('basics').VersionTextBox, steps('basics').versionDropDown)]",
                "swxtchSize": "[steps('basics').swxtchSize]",
                "ppgId": "[if(steps('network').AdvancedSection.ppgEnable, steps('network').AdvancedSection.ppgTextBox, '')]",
                "tagsByResource": "[steps('basics').TagsSection.Tags]",
                "adminName": "[steps('basics').adminName]",
                "sshPublicKey": "[ if(contains(steps('basics').credentials.authenticationType, 'sshPublicKey'), steps('basics').credentials.sshPublicKey, '' )]",
                "imageSKU": "[if(equals(steps('basics').planSection.plan, 'small'), 'swxtch-small-001', if(equals(steps('basics').planSection.plan, 'medium'), 'swxtch-medium-001', if(equals(steps('basics').planSection.plan, 'large'), 'swxtch-large-001', if(equals(steps('basics').planSection.plan, 'iex'), 'swxtch-iex-001', 'invalid'))))]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }
    }
}
