{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmCount": {
            "type": "int",
            "minValue": 1,
            "maxValue": 200,
            "metadata": {
                "description": "The number of VMs to create."
            }
        },
        "startIndex": {
            "type": "int",
            "metadata": {
                "description": "The starting index for VM names"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "vnetRG": {
            "type": "string",
            "metadata": {
                "description": "Resource group holding the vnet"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "VNET in which to deploy the VMs"
            }
        },
        "subnetCtrl": {
            "type": "string",
            "metadata": {
                "description": "Subnet for control plane data"
            }
        },
        "subnetData": {
            "type": "string",
            "metadata": {
                "description": "Subnet for use with DPDK testing"
            }
        },
        "vmBaseName": {
            "type": "string",
            "metadata": {
                "description": "Specifies a name for generating sub-resource names."
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D4s_v4"
        },
        "enableAcceleratedNetworking": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Enable Accelerated Networking (not available in some lesser VMs)."
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies a username for the Virtual Machine."
            }
        },
        "adminPublicKey": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the SSH rsa public key file as a string. Use \"ssh-keygen -t rsa -b 2048\" to generate your SSH key pairs."
            }
        },
        "resourceTags": {
            "type": "object",
            "defaultValue": {
                "Environment": "Dev",
                "Project": "DPDK",
                "DeleteGroup": "GroupVM"
            }
        }
    },
    "variables": {
        "vmName": "vm",
        "networkInterfaceName0": "nic0",
        "networkInterfaceName1": "nic1",
        "osDiskName": "osdisk",
        "imagePublisher": "Canonical",
        "imageOffer": "0001-com-ubuntu-server-focal",
        "imageSKU": "20_04-lts"
    },
    "functions": [
        {
            "namespace": "sdmc",
            "members": {
                "basename": {
                    "parameters": [
                        {
                            "name": "base",
                            "type": "string"
                        },
                        {
                            "name": "index",
                            "type": "int"
                        }
                    ],
                    "output": {
                        "type": "string",
                        "value": "[format('{0}{1:D3}',parameters('base'),parameters('index'))]"
                    }
                }
            }
        }
    ],
    "resources": [
        {
            "name": "[concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_', variables('networkInterfaceName0'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-06-01",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig0",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId(parameters('vnetRG'),'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetCtrl'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]"
            },
            "copy": {
                "name": "nic0copy",
                "count": "[parameters('vmCount')]"
            }
        },
        {
            "name": "[concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_', variables('networkInterfaceName1'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-06-01",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId(parameters('vnetRG'),'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetData'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]"
            },
            "copy": {
                "name": "nic1copy",
                "count": "[parameters('vmCount')]"
            }
        },
        {
            "name": "[concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_', variables('vmName'))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2020-12-01",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "dependsOn": [
                "[concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_', variables('networkInterfaceName0'))]",
                "[concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_', variables('networkInterfaceName1'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "[concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_', variables('osDiskName'))]",
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        },
                        "caching": "ReadOnly"
                    },
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('imageSKU')]",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_' ,variables('networkInterfaceName0')))]",
                            "properties": {
                                "primary": true
                            }
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex'))), '_', variables('networkInterfaceName1')))]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[sdmc.basename(parameters('vmBaseName'), copyIndex(parameters('startIndex')))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('adminPublicKey')]"
                                }
                            ]
                        }
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                }
            },
            "copy": {
                "name": "vmcopy",
                "count": "[parameters('vmCount')]"
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}
